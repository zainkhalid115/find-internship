<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post New Internship - Find Internship</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .form-group textarea {
            width: calc(100% - 20px);
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-top: 5px;
            min-height: 100px; /* Make textareas larger */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Post a New Internship</h2>

        <!-- Display flash messages -->
        <% if (success_msg) { %>
            <div class="alert alert-success"><%= success_msg %></div>
        <% } %>
        <% if (error_msg) { %>
            <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>
        <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <!-- Display specific validation errors -->
        <% if (typeof errors != 'undefined' && errors.length > 0) { %>
            <% errors.forEach(function(error) { %>
                <div class="alert alert-danger"><%= error.msg %></div>
            <% }) %>
        <% } %>

        <form action="/internships" method="POST">
            <div class="form-group">
                <label for="title">Internship Title:</label>
                <input type="text" id="title" name="title" value="<%= typeof title != 'undefined' ? title : '' %>" required>
            </div>
            <div class="form-group">
                <label for="company">Company Name:</label>
                <input type="text" id="company" name="company" value="<%= typeof company != 'undefined' ? company : '' %>" required>
            </div>
            <div class="form-group">
                <label for="location">Location:</label>
                <input type="text" id="location" name="location" value="<%= typeof location != 'undefined' ? location : '' %>" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" required><%= typeof description != 'undefined' ? description : '' %></textarea>
            </div>
            <div class="form-group">
                <label for="requirements">Requirements (comma-separated):</label>
                <input type="text" id="requirements" name="requirements" value="<%= typeof requirements != 'undefined' ? requirements : '' %>" placeholder="e.g., Node.js, MongoDB, JavaScript">
            </div>
            <div class="form-group">
                <label for="applicationLink">Application Link:</label>
                <input type="url" id="applicationLink" name="applicationLink" value="<%= typeof applicationLink != 'undefined' ? applicationLink : '' %>" required placeholder="https://example.com/apply">
            </div>
            <button type="submit">Post Internship</button>
        </form>
        <p style="margin-top: 20px;"><a href="/internships">Cancel and Go Back</a></p>
    </div>
</body>
</html>